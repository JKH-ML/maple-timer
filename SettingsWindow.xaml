<Window x:Class="메이플_타이머.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="설정" Height="500" Width="450"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Background="#FF2D2D30">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 기본 타이머 시간 설정 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="기본 타이머 시간:" VerticalAlignment="Center" Width="120" Foreground="White"/>
            <Slider x:Name="DefaultTimerSlider" Width="200" Minimum="30" Maximum="300" Value="30"
                    TickFrequency="30" IsSnapToTickEnabled="True" ValueChanged="DefaultTimerSlider_ValueChanged"/>
            <TextBlock x:Name="DefaultTimerLabel" Text="30분" VerticalAlignment="Center" Margin="10,0,0,0" MinWidth="40" Foreground="White"/>
        </StackPanel>

        <!-- 사운드 파일 설정 -->
        <GroupBox Grid.Row="1" Header="사운드 파일" Margin="0,0,0,15" Foreground="White" Background="#FF404040" BorderBrush="#FF606060">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="기본 알림음:" Width="100" VerticalAlignment="Center" Foreground="White"/>
                    <Button x:Name="BasicSoundButton" Content="파일 선택" Width="80" Height="25"
                            Click="BasicSoundButton_Click" Margin="0,0,10,0" Background="#FF505050" Foreground="White" BorderBrush="#FF707070"/>
                    <TextBlock x:Name="BasicSoundLabel" Text="기본값" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="특수 알림음:" Width="100" VerticalAlignment="Center" Foreground="White"/>
                    <Button x:Name="SpecialSoundButton" Content="파일 선택" Width="80" Height="25"
                            Click="SpecialSoundButton_Click" Margin="0,0,10,0" Background="#FF505050" Foreground="White" BorderBrush="#FF707070"/>
                    <TextBlock x:Name="SpecialSoundLabel" Text="기본값" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- 볼륨 설정 -->
        <GroupBox Grid.Row="2" Header="볼륨 설정" Margin="0,0,0,15" Foreground="White" Background="#FF404040" BorderBrush="#FF606060">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="기본 알림:" Width="80" VerticalAlignment="Center" Foreground="White"/>
                    <Slider x:Name="BasicVolumeSlider" Width="150" Minimum="0" Maximum="100" Value="50"
                            TickFrequency="10" IsSnapToTickEnabled="True" ValueChanged="BasicVolumeSlider_ValueChanged"/>
                    <TextBlock x:Name="BasicVolumeLabel" Text="50%" VerticalAlignment="Center" Margin="10,0,0,0" MinWidth="35" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="특수 알림:" Width="80" VerticalAlignment="Center" Foreground="White"/>
                    <Slider x:Name="SpecialVolumeSlider" Width="150" Minimum="0" Maximum="100" Value="50"
                            TickFrequency="10" IsSnapToTickEnabled="True" ValueChanged="SpecialVolumeSlider_ValueChanged"/>
                    <TextBlock x:Name="SpecialVolumeLabel" Text="50%" VerticalAlignment="Center" Margin="10,0,0,0" MinWidth="35" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="시작 알림:" Width="80" VerticalAlignment="Center" Foreground="White"/>
                    <Slider x:Name="StartVolumeSlider" Width="150" Minimum="0" Maximum="100" Value="50"
                            TickFrequency="10" IsSnapToTickEnabled="True" ValueChanged="StartVolumeSlider_ValueChanged"/>
                    <TextBlock x:Name="StartVolumeLabel" Text="50%" VerticalAlignment="Center" Margin="10,0,0,0" MinWidth="35" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="종료 알림:" Width="80" VerticalAlignment="Center" Foreground="White"/>
                    <Slider x:Name="EndVolumeSlider" Width="150" Minimum="0" Maximum="100" Value="50"
                            TickFrequency="10" IsSnapToTickEnabled="True" ValueChanged="EndVolumeSlider_ValueChanged"/>
                    <TextBlock x:Name="EndVolumeLabel" Text="50%" VerticalAlignment="Center" Margin="10,0,0,0" MinWidth="35" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- 초기화 버튼 -->
        <Button x:Name="ResetButton" Grid.Row="3" Content="기본값으로 초기화" Width="150" Height="30"
                HorizontalAlignment="Center" Margin="0,0,0,20" Click="ResetButton_Click" Background="#FF505050" Foreground="White" BorderBrush="#FF707070"/>

        <!-- 하단 버튼들 -->
        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OkButton" Content="확인" Width="80" Height="30" Margin="0,0,10,0"
                    Click="OkButton_Click" IsDefault="True" Background="#FF505050" Foreground="White" BorderBrush="#FF707070"/>
            <Button x:Name="CancelButton" Content="취소" Width="80" Height="30"
                    Click="CancelButton_Click" IsCancel="True" Background="#FF505050" Foreground="White" BorderBrush="#FF707070"/>
        </StackPanel>
    </Grid>
</Window>